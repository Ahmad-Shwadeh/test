<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ps.lenovehp.pharmacy">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_user"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pharmacy">
        <activity
            android:name="ps.lenovehp.pharmacy.medsearch"
            android:exported="true"
            android:label="@string/title_activity_item_search"
            android:theme="@style/Theme.Pharmacy.NoActionBar"
            />
        <activity
            android:name="ps.lenovehp.pharmacy.DataActivity"
            android:exported="false"
            android:label="@string/title_activity_data"
            android:theme="@style/Theme.Pharmacy.NoActionBar" />
        <activity
            android:name="ps.lenovehp.pharmacy.group.codes.MainActivityMenu"
            android:exported="false"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.Pharmacy.NoActionBar" />
        <activity
            android:name="ps.lenovehp.pharmacy.group.account.UserInformation"
            android:exported="false"
            android:label="@string/title_activity_user_information"
            android:theme="@style/Theme.Pharmacy.NoActionBar" />
        <activity
            android:name="ps.lenovehp.pharmacy.ActivityFirst"
            android:exported="false"
            android:label="@string/title_activity_first"
            android:theme="@style/Theme.Pharmacy.NoActionBar" />
        <activity
            android:name="ps.lenovehp.pharmacy.SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.Pharmacy.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ps.lenovehp.pharmacy.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Pharmacy.NoActionBar" />
    </application>

</manifest>